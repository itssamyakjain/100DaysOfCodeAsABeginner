public void bubbleSort(int[] arr, int n){
  
  if(n==1)        // base case , as if array size reduces by 1 after every recursive call as the largest element becomes the last element in subarray 
    return;
  
  for(int i=0;i<n-1;i++){
    if(arr[i]>arr[i+1]
      swap(arr[i],arr[i+1]);
  }
  
  bubbleSort(arr,n-1);
}
